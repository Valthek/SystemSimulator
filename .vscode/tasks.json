{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "tasks": [
        {
            "taskName": "tsc",
            "command": "tsc",
            "args": ["-p","."],
            "isShellCommand": true,
            "isBuildCommand": true,
            "isBackground": true,
            "showOutput": "silent",
            "problemMatcher": "$tsc"
        },
        {
            "taskName": "gulp",
            "command": "gulp",
            "isShellCommand": true,
            "showOutput": "always"
        }
    ]
}